<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_wait_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="60dp"
    android:minWidth="180dp"
    android:gravity="center"
    android:background="@drawable/shape_dialog_wait">
    <ImageView
        android:id="@+id/dialog_wait_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/img_wait"
        android:contentDescription="@string/waiting"/>
    <TextView
        android:id="@+id/dialog_wait_tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/waiting"
        android:textColor="@color/menu_text" />
</LinearLayout>